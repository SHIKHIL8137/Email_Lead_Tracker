# Frontend Dockerfile
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:alpine AS runner
COPY --from=build /app/dist /usr/share/nginx/html
# Basic nginx config (optional, default serves /)
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
